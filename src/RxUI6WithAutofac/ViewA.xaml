             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Background="LightPink">
            <StackPanel VerticalAlignment="Center">
                <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="100">View: <Run  x:Name="ViewInstanceId" /></TextBlock>
                <TextBlock HorizontalAlignment="Center" Foreground="Black" FontSize="100">VM: <Run  x:Name="ViewModelInstanceId" /></TextBlock>
            </StackPanel>
        </Border>  
    </Grid>
</UserControl>
